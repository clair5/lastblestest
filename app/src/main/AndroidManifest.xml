        <activity android:name=".MapTestM" />
        <activity android:name=".TabFragment1" />
        <activity android:name=".TabFragment2" />
        <activity
            android:name=".CouponActivity"
            tools:ignore="DuplicateActivity" />
    </application>

</manifest>